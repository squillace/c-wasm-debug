  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "lldb",
      "request": "launch",
      "name": "C LLDB wasm debug",
      "program": "wasmtime",
      "args": [
        "-D",
        "debug-info=y",
        "--dir",
        ".",
        "./main.wasm"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "C build main.wasm"
    },
    {
      "name": "C GDB wasm debug",
      "type":"cppdbg",
      "request": "launch",
      "program": "/home/squillace/.wasmtime/bin/wasmtime",
      "args": [
        "-D",
        "debug-info=y",
        "--dir",
        ".",
        "./main.wasm"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
          {
              "text": "-enable-pretty-printing",
          }
      ],
      "preLaunchTask": "C build main.wasm"
    },    
    {
      "type": "lldb",
      "request": "launch",
      "name": "CPP LLDB wasm debug",
      "program": "wasmtime",
      "args": [
        "-D",
        "debug-info=y",
        "--dir",
        ".",
        "./main.wasm"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CPP build main.wasm"
    },
    {
      "name": "CPP GDB wasm debug",
      "type":"cppdbg",
      "request": "launch",
      "program": "/home/squillace/.wasmtime/bin/wasmtime",
      "args": [
        "-D",
        "debug-info=y",
        "--dir",
        ".",
        "./main.wasm"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
          {
              "text": "-enable-pretty-printing",
          }
      ],
      "preLaunchTask": "CPP build main.wasm"
    }
 
  ]
}